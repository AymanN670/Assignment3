<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<!-- Content for the edit Operation-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class="form" method="POST">
        <!-- to add the name in the database -->
            <div class="form-group">
                <label for="nameTextField">Book Title</label>
                <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Book Title" name="Name" value="<%=Book.Name%>" required>
            </div>
            <div class="form-group">
                <label for="authorTextField">Book Author</label>
                <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Book Author" name="Author" value="<%=Book.Author%>" required>
            </div>
            <div class="form-group">
                <label for="publishedTextField">Published</label>
                <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Published year" name="Published" value="<%=Book.Published%>" required>
            </div>
            <div class="form-group">
            <!-- it's text area because it takes more space -->
                <label for="descriptionTextArea">Book Description</label>
                <textArea type="text" class="form-control" id="descriptionTextArea" placeholder="Enter the book Description" name="Description" required><%=Book.Description%></textArea>
            </div>
            <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="text" class="form-control" id="priceTextField" placeholder="Book's Price" name="Price" value="<%=Book.Price%>" required>
            </div>
            <button class="btn btn-primary" type="submit">Submit
            <i class="fas fa-edit"></i></button>

            <button class="btn btn-warning" type="submit">Cancel
            <i class="fas fa-undo"></i></button>

        </form> 
    </div>

</div>
<%- include ../Partials/footer.ejs %>


